page{
    background: #efeff4
}
.header {
  padding: 80rpx;
  line-height: 1;
}
.container {
  padding:0;
} 
.title {
  font-size: 52rpx;
}
.card-list{
    width: 100%
}
.card{
    width:calc(100% - 20px);
    height:115px;
    margin:0 auto;
    margin-top:10px;
    position:relative;
    overflow: hidden;
    box-sizing: border-box;
}
.cardafter{
    width: 35%;
    height:100%;
    background: #666;
    font-size:45px;
    color:#fff;
    line-height: 115px;
    text-align: center;
    position: absolute;
    z-index: 1;
    right: 0;
    border-radius:0px 15rpx 15rpx 0px;
}
.card .textbox{
    margin-top:30px;
    margin-left:90px;
}
.icon{
    width: 60px;
    height:60px;
    margin:27px 15px;
    position: absolute;
}
.card .intext{
    display:block;
    font-size: 16px;
    line-height: 18px;
    color:#fff;
}
.card .intext:nth-of-type(2){
    display:block;
    font-size: 12px;
    line-height: 18px;
    color: #d4d4d4;
}
.card .intext:nth-of-type(3){
    margin-top:10rpx;
    font-size:14px;
    line-height: 18px;
}
.card-back{
    box-sizing: border-box;
    width: 100%;
    height: 115px;
    background: #ffffff;
    border-radius:15rpx;
    position:absolute;
    z-index: 2;
    transition: all .2s cubic-bezier(0, 0.18, 0.76, -0.18);
}
.open{
    right:35%;
    border-radius:15rpx 0 0 15rpx;
}
.close{
    right:0;
    border-radius:15rpx;
}